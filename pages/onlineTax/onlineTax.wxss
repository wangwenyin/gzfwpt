/* pages/onlineTax/onlineTax.wxss */
page {
  background: #efeff4;
}

.item-container {
  padding: 0 50rpx;
  background: #fff
}

.item {
  height: 140rpx;
  font-size: 30rpx;
  color: #3d3d3d;
  border-bottom: 1rpx solid #eee
}

.item text {
  float: left;
  height: 100%;
  line-height: 140rpx;
  text-align: right
}

.mt {
  margin-top: 20rpx
}

.item text:last-child {
  margin-left: 40rpx;
  color: #999;
}
.btn-footer {
  position: fixed;
  left: 0; 
  bottom: 0;
  width: 100%;
  height: 98rpx;
  overflow: hidden
}

.btn-footer view:first-child {
  float: left;
  width: 60%;
  height: 100%;
  line-height: 98rpx;
  padding-left: 50rpx;
  font-size: 30rpx;
  color: #3d3d3d;
  background-color: #fff;
  box-sizing: border-box
}

.total text:last-child {
  font-size: 34rpx;
  color: #f59e2c
}

.btn-footer view:last-child {
  float: left;
  width: 40%;
  height: 100%;
  line-height: 98rpx;
  text-align: center;
  color: #fff;
  font-size: 34rpx; 
  background-image: linear-gradient(90deg, 
		#31adf5 0%, 
		#1c7ae6 100%), 
	linear-gradient(
		#f7f7fa, 
		#f7f7fa)
}

