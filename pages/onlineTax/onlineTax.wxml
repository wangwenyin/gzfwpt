<!--pages/onlineTax/onlineTax.wxml-->
<view class='item-container'>
  <view class='item'>
    <text>纳税项目：</text>
    <text>{{fcObj.fcName}}</text>
  </view>
  <view class='item'>
    <text>税款所属时期：</text>
    <text>{{fcObj.time}}</text>
  </view>
  <view class='item'>
    <text>税基：</text>
    <text>{{fcObj.taxBase}}元</text>
  </view>
  <view class='item'>
    <text>税率：</text>
    <text>{{fcObj.taxRate}}</text>
  </view>
  <view class='item'>
    <text>已缴或扣除税额：</text>
    <text>{{fcObj.payedTax}}元</text>
  </view>
</view>
<view class='item-container mt'>
  <view class='item'>
    <text>应缴税额：</text>
    <text>{{fcObj.payTax}}元</text>
  </view>
  <view class='item'>
    <text>逾期罚息：</text>
    <text>{{fcObj.payment}}元</text>
  </view>
  <view class='btn-footer'>
    <view class='total'>
      <text>金额总计：</text><text>{{fcObj.totalMoney}}元</text>
    </view>
    <view bindtap='payTax'>申请缴税</view>
  </view>  
</view>