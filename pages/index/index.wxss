 /**index.wxss**/

page {
  background: #efeff4;
}

.search-box {
  width: 100%;
  height: 340rpx;
  overflow: hidden;
}

.search-box view {
  display: flex;
  justify-content: center;
  margin-top: 90rpx;
}

.search-box view text {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.7);
}

.search-box view text:nth-child(1) {
  position: relative;
  color: #fff;
  font-weight: bold;
}

.search-box view text:nth-child(1)::after {
  position: absolute;
  left: 40rpx;
  display: block;
  content: '';
  width: 100rpx;
  height: 2rpx;
  margin-top: 10rpx;
  background-color: #eef5f9;
}

.search-box view text:nth-child(2) {
  margin: 0 50rpx;
}

.input-placeholder {
  font-size: 28rpx;
}

.search-box input {
  position: relative;
  width: 85%;
  height: 80rpx;
  margin: 60rpx auto;
  padding-left: 40rpx;
  border-radius: 40rpx;
  background: #fff;
}

.search-box button {
  position: absolute;
  top: 0;
  right: 0;
  z-index: 99;
  width: 198rpx;
  height: 100%;
  line-height: 80rpx;
  background-color: #31adf5;
  color: #fff;
  box-shadow: 0px 0px 2px 0px rgba(31, 45, 61, 0.29);
  border-radius: 40rpx;
}

.myFc-list {
  padding: 24rpx;
}

.myFc {
  background: #fff;
}

.title {
  height: 70rpx;
  padding: 21rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #eee;
  font-size: 28rpx;
  color: #565656;
}

.title image {
  width: 23rpx;
  height: 29rpx;
  margin-right: 10rpx;
}

.item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.item view:nth-child(1) {
  overflow: hidden;
}

.item view:nth-child(1) .fcName{
  float: left;
  font-size: 34rpx;
  color: #3d3d3d;
}

.item view:nth-child(1) .unitPrice {
  float: right;
  font-size: 24rpx;
  color: #f59e2c;
}

.item view:nth-child(2) {
  margin: 10rpx 0;
  font-size: 24rpx;
  color: #707070;
}

.item view:nth-child(3) {
  font-size: 24rpx;
  color: #1e609b;
}
