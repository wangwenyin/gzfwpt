/* pages/consultant/consultant.wxss */
.search {
  position: relative;
  width: 90%;
	height: 80rpx;
  padding-left: 100rpx;
  margin: 0 auto;
	background-color: #f7f7f9;
	border-radius: 40rpx;
  box-sizing: border-box;
}

.search image {
  position: absolute;
  left: 40rpx;
  top: 17rpx;
  width: 46rpx;
  height: 40rpx;
}

.question-box {
  width: 90%;
  margin: 20rpx auto
}

.question-box view {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  color: #3d3d3d;
  border-bottom: 1rpx solid #e6eff5;
}

.title text {
  float: left;
  display: block;
  width: 120rpx;
  height: 100%;
  line-height: 90rpx;
  text-align: center
}

.active {
  font-size: 28rpx;
	color: #565656;
}

.no-active {
  font-size: 24rpx;
	color: #8a8a8a;
}

.line::after {
  display: block;
  content: '';
  width: 120rpx;
  height: 1px;
  background-color: #31adf5;
}

.btn-footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  overflow: hidden
}

.btn-footer view {
  float: left;
  width: 50%;
  height: 100%;
  line-height: 98rpx;
  font-size: 30rpx;
  text-align: center;
}

.btn-footer view:first-child {
  color: #575757;
  background-color: #f7f7fa;
}

.btn-footer view:last-child {
  color: #fff;
  background-image: linear-gradient(90deg, 
		#31adf5 0%, 
		#1c7ae6 100%), 
	linear-gradient(
		#f7f7fa, 
		#f7f7fa)
}