/* pages/btn-footer/btn-footer.wxss */
.btn-footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  overflow: hidden
}

.btn-footer view:first-child {
  float: left;
  width: 20%;
  height: 100%;
  font-size: 24rpx;
  text-align: center;
  background-color: #fff
}

.btn-footer view:first-child image {
  width: 40rpx;
  height: 40rpx;
  margin-top: 14rpx
}

.btn-footer view:first-child text {
  display: block;
  width: 100%
}

.btn-footer view:last-child {
  float: left;
  width: 80%;
  height: 100%;
  line-height: 98rpx;
  text-align: center;
  color: #fff;
  font-size: 36rpx; 
  background-image: linear-gradient(90deg, 
		#31adf5 0%, 
		#1c7ae6 100%), 
	linear-gradient(
		#f7f7fa, 
		#f7f7fa)
}